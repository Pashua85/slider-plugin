include ../input-group/input-group

form.form.form--one
  .form__group
    .form__header Направление слайдера
    .form__row
      .form__input-group 
        + input-group("горизонтальное", "radio-button-1-1", "input-group__input radio-button--1", "isVertical", "true", true)
      .form__input-group
        + input-group("вертикальное", "radio-button-1-2", "input-group__input radio-button--2", "isVertical", "false")
  .form__group
    .form__header Количество значений
    .form__row
      .form__input-group 
        + input-group("два", "radio-button-1-3", "input-group__input radio-button--3", "valueAmount", "two", true)
      .form__input-group
        + input-group("одно", "radio-button-1-4", "input-group__input radio-button--4", "valueAmount", "one")
  .form__group
    .form__header Работа с числами / строками
    .form__row
      .form__input-group 
        + input-group("числа", "radio-button-1-5", "input-group__input radio-button--5", "data-type", "numbers", true)
      .form__input-group
        + input-group("строки", "radio-button-1-6", "input-group__input radio-button--6", "data-type", "strings")
  .form__group
    .form__header Диапазон значений чисел
    .form__row
      .form__input-group 
        + input-group("0 - 100", "radio-button-1-7", "input-group__input input-group__input--for-numbers radio-button--7", "range", "0-100", true)
      .form__input-group
        + input-group("-60 - 120", "radio-button-1-8", "input-group__input input-group__input--for-numbers radio-button--8", "range", "-60-120")
  .form__group
    .form__header Шаг слайдера (для чисел)
    .form__row
      .form__input-group 
        + input-group("1", "radio-button-1-9", "input-group__input input-group__input--for-numbers radio-button--9", "step", "1", true)
      .form__input-group
        + input-group("5", "radio-button-1-10", "input-group__input input-group__input--for-numbers radio-button--10", "step", "5")
      .form__input-group
        + input-group("0.2", "radio-button-1-11", "input-group__input input-group__input--for-numbers radio-button--11", "step", "0.2")
  .form__group
    .form__header Шаг шкалы слайдера
    .form__row
      .form__input-group 
        + input-group("без шкалы", "radio-button-1-12", "input-group__input radio-button--12", "scale-step", "0", true)
      .form__input-group
        + input-group("10", "radio-button-1-13", "input-group__input input-group__input--for-numbers radio-button--13", "scale-step", "10")
      .form__input-group
        + input-group("20", "radio-button-1-14", "input-group__input input-group__input--for-numbers radio-button--14", "scale-step", "20")
      .form__input-group
        + input-group("1 (для строк)", "radio-button-1-15", "input-group__input input-group__input--for-strings radio-button--15", "scale-step", "1", false, true) 
  .form__group
    .form__header Отображение значения над ползунком
    .form__row
      .form__input-group 
        + input-group("при наведении курсора", "radio-button-1-16", "input-group__input radio-button--16", "showing-value", "hover", true) 
      .form__input-group
        + input-group("никогда", "radio-button-1-17", "input-group__input radio-button--17", "showing-value", "never") 
      .form__input-group
        + input-group("всегда", "radio-button-1-18", "input-group__input radio-button--18", "showing-value", "always") 
    


      