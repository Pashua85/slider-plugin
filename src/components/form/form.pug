include ../input-group/input-group

mixin form(index)
  - var formClass = 'form--' + index;
  - var id1 = 'radio-button-' + index + '-1';
  - var id2 = 'radio-button-' + index + '-2';
  - var id3 = 'radio-button-' + index + '-3';
  - var id4 = 'radio-button-' + index + '-4';
  - var id5 = 'radio-button-' + index + '-5';
  - var id6 = 'radio-button-' + index + '-6';
  - var id7 = 'radio-button-' + index + '-7';
  - var id8 = 'radio-button-' + index + '-8';
  - var id9 = 'radio-button-' + index + '-9';
  - var id10 = 'radio-button-' + index + '-10';
  - var id11 = 'radio-button-' + index + '-11';
  - var id12 = 'radio-button-' + index + '-12';
  - var id13 = 'radio-button-' + index + '-13';
  - var id14 = 'radio-button-' + index + '-14';
  - var id15 = 'radio-button-' + index + '-15';
  - var id16 = 'radio-button-' + index + '-16';
  - var id17 = 'radio-button-' + index + '-17';
  - var id18 = 'radio-button-' + index + '-18';

  form(class=`${formClass} example-form`)
    .form__group
      .form__header Направление слайдера
      .form__row
        .form__input-group 
          + input-group("горизонтальное", "radio-button-1-1", "input-group__input", "isVertical", "true", true)
        .form__input-group
          + input-group("вертикальное", "radio-button-1-2", "input-group__input", "isVertical", "false")
    .form__group
      .form__header Количество значений
      .form__row
        .form__input-group 
          + input-group("два", "radio-button-1-3", "input-group__input", "valueAmount", "two", true)
        .form__input-group
          + input-group("одно", "radio-button-1-4", "input-group__input", "valueAmount", "one")
    .form__group
      .form__header Работа с числами / строками
      .form__row
        .form__input-group 
          + input-group("числа", "radio-button-1-5", "input-group__input", "data-type", "numbers", true)
        .form__input-group
          + input-group("строки", "radio-button-1-6", "input-group__input", "data-type", "strings")
    .form__group
      .form__header Диапазон значений чисел
      .form__row
        .form__input-group 
          + input-group("0 - 100", "radio-button-1-7", "input-group__input input-group__input--for-numbers", "range", "0-100", true)
        .form__input-group
          + input-group("-60 - 120", "radio-button-1-8", "input-group__input input-group__input--for-numbers", "range", "-60-120")
    .form__group
      .form__header Шаг слайдера (для чисел)
      .form__row
        .form__input-group 
          + input-group("1", "radio-button-1-9", "input-group__input input-group__input--for-numbers", "step", "1", true)
        .form__input-group
          + input-group("5", "radio-button-1-10", "input-group__input input-group__input--for-numbers", "step", "5")
        .form__input-group
          + input-group("0.2", "radio-button-1-11", "input-group__input input-group__input--for-numbers", "step", "0.2")
    .form__group
      .form__header Шаг шкалы слайдера
      .form__row
        .form__input-group 
          + input-group("без шкалы", "radio-button-1-12", "input-group__input", "scale-step", "0", true)
        .form__input-group
          + input-group("10", "radio-button-1-13", "input-group__input input-group__input--for-numbers", "scale-step", "10")
        .form__input-group
          + input-group("20", "radio-button-1-14", "input-group__input input-group__input--for-numbers", "scale-step", "20")
        .form__input-group
          + input-group("1", "radio-button-1-15", "input-group__input input-group__input--for-strings", "scale-step", "1", false, true) 
    .form__group
      .form__header Отображение значения над ползунком
      .form__row
        .form__input-group 
          + input-group("при наведении курсора", "radio-button-1-16", "input-group__input", "showing-value", "hover", true) 
        .form__input-group
          + input-group("никогда", "radio-button-1-17", "input-group__input", "showing-value", "never") 
        .form__input-group
          + input-group("всегда", "radio-button-1-18", "input-group__input", "showing-value", "always") 
    


      